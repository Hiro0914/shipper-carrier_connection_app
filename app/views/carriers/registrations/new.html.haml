%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :loginID, "ログインID"
    %br/
    = f.text_field :loginID, autocomplete: "loginID", autofocus: true
  .field
    = f.label :personal_name, "個人名"
    %br/
    = f.text_field :personal_name, autocomplete: "personal_name"
  .field
    = f.label :company_name, "会社名"
    %br/
    = f.text_field :company_name, autocomplete: "company_name"
  .field
    = f.label :trigger, "このサイトを知ったきっかけ"
    %br/
    = f.text_field :trigger, autocomplete: "trigger"
  .field
    = f.label :address, "住所"
    %br/
    = f.text_field :address, autocomplete: "address"
  .field
    = f.label :phone_number, "電話番号"
    %br/
    = f.text_field :phone_number, autocomplete: "phone_number"
  .field
    = f.label :email, "メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password, "パスワード"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation, "パスワード(確認用)"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "ユーザー登録する"
= render "carriers/shared/links"
